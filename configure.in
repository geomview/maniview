GEOM_REQUIRE_GEOMVIEW_VERSION($srcdir/../../..,=,1,>=,8)
AC_PREFIX_DEFAULT(/usr/local/Geomview)
AC_PROG_CC
AC_PROG_INSTALL

top_geom_builddir=../../..
AC_SUBST(top_geom_builddir)

GEOM_REQUIRE_XFORMS
AC_SUBST(XFORMSLIBS)
