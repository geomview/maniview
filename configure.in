GEOM_GET_CACHED_VALUE(OOGLLIBS)
AC_SUBST(OOGLLIBS)

GEOM_GET_CACHED_VALUE(OOGLLIBS_ONCE)
AC_SUBST(OOGLLIBS_ONCE)

GEOM_GET_CACHED_VALUE(XLIBS)
